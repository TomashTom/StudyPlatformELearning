    <script>
        $(document).ready(function () {
            // Function to update the visual representation of selected checkboxes
            function updateSelectedCheckboxes() {
                const allCheckboxes = $('.category-checkbox, .creator-checkbox, input[name="dateRange"], input[name="difficultyLevels"], input[name^="filterStars"]');
                allCheckboxes.removeClass('selected-checkbox');
                allCheckboxes.filter(':checked').addClass('selected-checkbox');
            }

            // Function to save the current filter states to localStorage
            function saveSelectedFilters() {
                const selectedFilters = {
                    categories: $('.category-checkbox:checked').map((_, el) => $(el).val()).get(),
                    creators: $('.creator-checkbox:checked').map((_, el) => $(el).val()).get(),
                    dateRange: $('input[name="dateRange"]:checked').val(),
                    difficultyLevels: $('input[name="difficultyLevels"]:checked').map((_, el) => $(el).val()).get(),
                    filterStars: $('input[name="filterStars"]:checked').val()
                };
                localStorage.setItem('selectedFilters', JSON.stringify(selectedFilters));
                updateSelectedCheckboxes();
                fetchFilteredVideos(); // Add this line to fetch videos based on selected filters
            }

            // Function to restore filters from localStorage
            function restoreFilters() {
                const storedFilters = JSON.parse(localStorage.getItem('selectedFilters'));
                if (storedFilters) {
                    $.each(storedFilters, function (key, value) {
                        if (Array.isArray(value)) {
                            value.forEach(val => $(`input[name="${key}"][value="${val}"]`).prop('checked', true));
                        } else {
                            $(`input[name="${key}"][value="${value}"]`).prop('checked', true);
                        }
                    });
                    updateSelectedCheckboxes();
                    fetchFilteredVideos(); // Add this line to fetch videos based on restored filters
                }
            }

            // Function to fetch filtered videos (modify as per your application's logic)
            function updateVideoNamesFilter() {
                var selectedCategoryIds = $('.category-checkbox:checked').map(function () {
                    return this.value;
                }).get();

                var nameOptions = $('#nameOptions');
                var noVideosMessage = $('#noVideosMessage');

                if (selectedCategoryIds.length > 0) {
                    $('#nameFilter').show();
                    nameOptions.empty();

                    // Fetch filtered video names via AJAX
                    $.ajax({
                        url: '@Url.Action("FilterVideos", "Video", new { area = "User" })', // Update the URL as per your application
                        method: 'POST',
                        data: { categoryIds: selectedCategoryIds },
                        success: function (response) {
                            if (response.data && response.data.length > 0) {
                                $.each(response.data, function (index, name) {
                                    var checkboxId = 'name_' + name.replace(/\s+/g, '_');
                                    var checkboxHtml = '<div class="form-check">' +
                                        '<input type="checkbox" class="form-check-input" id="' + checkboxId + '" name="names" value="' + name + '">' +
                                        '<label class="form-check-label" for="' + checkboxId + '">' + name + '</label>' +
                                        '</div>';
                                    nameOptions.append(checkboxHtml);
                                });
                                noVideosMessage.hide();
                            } else {
                                noVideosMessage.show();
                            }
                        },
                        error: function () {
                            console.error('Error fetching filtered video names.');
                        }
                    });
                } else {
                    $('#nameFilter').hide();
                    nameOptions.empty();
                    noVideosMessage.hide();
                }
            }

            // Function to reset all filters
            function resetAllFilters() {
                $('input[type=checkbox], input[type=radio]').prop('checked', false);
                updateSelectedCheckboxes();
                localStorage.removeItem('selectedFilters');
                fetchFilteredVideos(); // Add this line to fetch all videos after resetting filters
            }

            // Event listeners
            $('#applyFiltersBtn').click(function (e) {
                e.preventDefault();
                saveSelectedFilters();
            });

            $('#resetFiltersBtn').click(function () {
                resetAllFilters();
            });

            $('.category-checkbox, .creator-checkbox, input[name="dateRange"], input[name="difficultyLevels"], input[name^="filterStars"]').change(function () {
                updateVideoNamesFilter(); // Update video names based on selected categories
                saveSelectedFilters(); // Save the filters whenever they are changed
            });

            $('.star-rating-radio').on('change', function () {
                $('.star-rating-radio').not(this).prop('checked', false);
