@model QuizViewModel

<form method="post" asp-action="SaveQuestions">
    @for (int i = 0; i < Model.Questions.Count; i++)
    {
        <input type="text" asp-for="@Model.Questions[i].Text" />
        <input type="hidden" asp-for="@Model.Questions[i].VideoId" />
        @for (int j = 0; j < Model.Questions[i].Answers.Count; j++)
        {
            <input type="text" asp-for="@Model.Questions[i].Answers[j].Text" />
            <input type="checkbox" asp-for="@Model.Questions[i].Answers[j].IsCorrect" />
        }
        // Add a button or link to remove the question if needed
    }
    <button type="submit">Submit All</button>
</form>
