    <div class="form-group">
        <label asp-for="Name">Video Title</label>
        <input asp-for="Name" class="form-control" />
        @if (Model.VideoId == 0)
        {
            <span asp-validation-for="Name" class="text-danger"></span>
        }
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        @if (Model.VideoId == 0)
        {
            <span asp-validation-for="Description" class="text-danger"></span>
        }
    </div>

    <div class="form-group">
        <label asp-for="Difficulty">Difficulty</label>
        <select asp-for="Difficulty" class="form-select" asp-items="Html.GetEnumSelectList<VideoDifficulty>()">
            <option value="">Select Difficulty</option>
        </select>
        @if (Model.VideoId == 0)
        {
            <span asp-validation-for="Difficulty" class="text-danger"></span>
        }
    </div>

    <div class="form-group">
        <label>Current Video</label>
        @if (Model.VideoPath != null)
        {
            <video controls="controls" width="320" height="240">
                <source src="@Url.Content("~/videoFiles/" + Model.VideoName)" type="video/mp4" />
                Your browser does not support the video element.
            </video>
        }
        else
        {
            <p>No video found.</p>
        }
    </div>

    <div class="form-group">
        <label for="newVideoFile">New Video (optional)</label>
        <input type="file" id="newVideoFile" name="newVideoFile" class="form-control"  />
